<div class="category-view" data-region="category-view">
    <div class="category-header">
        <div class="category-info">
            {{#category.image_url}}
            <div class="category-image">
                <img src="{{category.image_url}}" alt="" class="img-fluid rounded">
            </div>
            {{/category.image_url}}
        </div>
    </div>
    
    {{#subcategories}}
    <section class="category-subcategories" aria-labelledby="subcategories-heading">
        <h2 id="subcategories-heading" class="section-title">{{#str}}subcategories, block_card_courses{{/str}}</h2>
        <div class="subcategories-container">
            <div class="subcategories-list">
                {{#subcategories}}
                <div class="subcategory-item">
                    <a href="{{url}}" class="subcategory-link">{{name}}</a>
                    <span class="subcategory-course-count">{{course_count}}</span>
                </div>
                {{/subcategories}}
            </div>
        </div>
    </section>
    {{/subcategories}}
    
    <section class="category-courses" aria-labelledby="courses-heading">
        <h2 id="courses-heading" class="section-title">{{#str}}courses, block_card_courses{{/str}}</h2>
        <div class="courses-grid grid-view">
            {{#courses}}
                {{> block_card_courses/course_card}}
            {{/courses}}
        </div>
        {{^courses}}
        <div class="alert alert-info">
            {{#str}}nocourses, block_card_courses{{/str}}
        </div>
        {{/courses}}
    </section>
</div>