<div class="category-card">
    <a href="{{url}}" class="category-link" aria-label="{{#str}}viewcategory, block_card_courses, {{name}}{{/str}}">
        <div class="category-content">
            <h4 class="category-title">{{name}}</h4>
            <div class="category-description">{{{description}}}</div>
            <div class="category-meta">
                <span class="course-count">{{course_count}} {{#str}}courses, block_card_courses{{/str}}</span>
            </div>
        </div>
    </a>
</div>