<div class="card">
    <a href="{{url}}" class="card-link">
        <img src="{{image_url}}" alt="{{name}}" class="card-image">
        <div class="card-content">
            <h3 class="card-title">{{name}}</h3>
            <div class="card-description">{{{description}}}</div>
            <div class="card-meta">
                <span>{{course_count}} courses</span>
            </div>
        </div>
    </a>
</div>